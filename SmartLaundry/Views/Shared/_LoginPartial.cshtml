@using Microsoft.AspNetCore.Identity
@using SmartLaundry.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("PL", "ChangeCulture", "Home", new { lang = "pl-PL", returnUrl = Context.Request.Path }, null)</li>
        <li>@Html.ActionLink("EN", "ChangeCulture", "Home", new { lang = "en-US", returnUrl = Context.Request.Path }, null)</li>
        @if(SignInManager.IsSignedIn(User))
        {
            <li>
                <a asp-area="" asp-controller="Dormitory" asp-action="Index">@Localizer["Dormitories"]</a>
            </li>
        }
    </ul>

    @if(SignInManager.IsSignedIn(User))
    {

        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Localizer["ManageTitle"]</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link"><b>@Localizer["LogOut"]</b></button>
                </li>
            </ul>
        </form>
    }
</div>