@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-centered">
        <div class="form-box">
            <div class="form-top-simple">
                <div class="form-top-full">
                    <h3>
                        <b>@Localizer["ManageTitle"]</b>
                    </h3>
                </div>
            </div>
            <div class="form-bottom">
                <div>
                    <h4>@Localizer["ManageMessage"]</h4>
                    <hr/>
                    <div class="row">
                        <div class="col-md-3">
                            @await  Html.PartialAsync("_ManageNav")
                        </div>
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}